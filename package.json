{
  "name": "dependabot-clubhouse-actions",
  "version": "1.0.0",
  "description": "Automatically create a Clubhouse story for every Dependabot PR",
  "repository": "https://github.com/movableink/dependabot-clubhouse-actions",
  "author": "Alex LaFroscia <alafroscia@movableink.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "ncc build lib/index.ts",
    "lint": "eslint . --ext .js,.ts",
    "test": "jest"
  },
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/github": "^2.0.0",
    "clubhouse-lib": "^0.9.0"
  },
  "devDependencies": {
    "@movable/eslint-config": "^0.2.0",
    "@movable/prettier-config": "^0.2.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^6.7.2",
    "eslint-plugin-jest": "^23.1.1",
    "husky": "^4.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^10.0.0-beta.14",
    "nock": "^11.7.0",
    "prettier": "^1.19.1",
    "ts-jest": "^26.5.3",
    "typescript": "^3.8.3"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": "@movable/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "yarn build && git add dist/index.js && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.json": "prettier --write"
  }
}
